@model IndyBeerNavigator.Models.BreweryModels.BreweryDetail

@{
    ViewBag.Title = "Delete";
}
    <body style="      background: url(https://images.unsplash.com/photo-1528823872057-9c018a7a7553?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60);
        background-size: cover;
        background-repeat: no-repeat;
        color:antiquewhite;
        text-align:center;
    ">

        <h3 style="        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        color: #A5AE9E;
        text-decoration: underline;
        text-shadow: 2px 2px #2F2504;
        text-align: center;
        font-size: 4rem;">Are you sure you want to delete this brewery?</h3>
        <div style="        border: 3px double black;
        text-align: center;
        background-color: #A5AE9E;
        color: #2F2504;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 2rem;">
            <h4 style="font-family: 'Times New Roman', Times, serif; font-size:3rem;"><u>Brewery Details</u></h4>
            <dl >
                
                <dt>
                    <u>
                        Name:
                    </u>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    <u>
                        Address:
                    </u>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt>
                    <u>
                        Carryout:
                    </u>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Carryout)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-bottom:20px;">
            <input type="submit" value="Delete" class="btn btn-danger" /> <hr />
            <button style="background-color:#2F2504"> @Html.ActionLink("Return to List", "Index", "", new { style = "color:white;" })</button>
        </div>
            }
        </div>
        </body>
