@model IndyBeerNavigator.Models.BreweryModels.BreweryDetail

@{
    ViewBag.Title = "Details";
}
    <body style="      background: url(https://images.unsplash.com/photo-1528823872057-9c018a7a7553?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60);
        background-size: cover;
        background-repeat: no-repeat;
        color:antiquewhite;
        text-align:center;
    ">

        <div style="        background-color: #A5AE9E;
        color: #2F2504;
        border: 3px ridge #2F2504;
        border-radius: 20%;
        margin-top: 50px;">
            <h3 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size:3rem; font-weight:bold;">Brewery Specifics</h3>
            <hr />
            <dl class="dl-horizontal" style="font-size: 2.3rem; font-family: 'Times New Roman', Times, serif; display:inline-block; ">
               
                <dt style="width: 240px;">
                    @Html.DisplayNameFor(model => model.Name):
                </dt>

                <dd style="width: 240px;">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt style="width: 240px;">
                    @Html.DisplayNameFor(model => model.Address):
                </dt>

                <dd style="width: 240px;">
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt  style="width: 240px;">
                    @Html.DisplayNameFor(model => model.Carryout):
                </dt>

                <dd style="width: 240px;">
                    @Html.DisplayFor(model => model.Carryout)
                </dd>
            </dl>

            <dl style="font-size: 2rem; font-style:oblique;">
                <dt>
                    @Html.ActionLink("See Beers from this Brewery", "BeerList", new { id = Model.BreweryId }, new { style = "color:brown" })
                </dt>

                <dt>
                    @Html.ActionLink("See Specials for this Brewery", "SaleList", new { id = Model.BreweryId }, new { style = "color:brown" })
                </dt>

            </dl>
        </div>
        <p>
            <button class="btn btn-warning"> @Html.ActionLink("Edit this Brewery", "Edit", new { id = Model.BreweryId }, new { style = "color:white" })</button> |
            <button class="btn btn-danger"> @Html.ActionLink("Remove this Brewery", "Delete", new { id = Model.BreweryId }, new { style = "color:white" })</button> |
            <button class="btn btn-info"> @Html.ActionLink("Back to List", "Index", "", new { style = "color:white" })</button>
        </p>
        </body>
