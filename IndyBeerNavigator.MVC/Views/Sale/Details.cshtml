@model IndyBeerNavigator.Models.SaleModels.SaleDetail

@{
    ViewBag.Title = "Details";
}
<body style="        background-image: url(https://images.unsplash.com/photo-1504502350688-00f5d59bbdeb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=60);
        background-size: cover;
        background-repeat: no-repeat;
    ">
    <h2 style="        color: #698F3F;
        text-decoration: underline;
        text-shadow: 2px 2px #0A122A;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 4rem;">Discount Details</h2>

<div style="        
        color: #E7DECD;
        text-shadow: 2px 2px #0A122A;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 2rem;">
    <dl >

        <dt>
            <u>
            Day of the Week:
            </u>
        </dt>

        <dd style="color:#0A122A; text-shadow: 1px 1px #FBFAF8;">
            @Html.DisplayFor(model => model.DayOfTheWeek)
        </dd>

        <dt>
            <u>
                Sale Price:
            </u>
        </dt>

        <dd style="color:#0A122A; text-shadow:1px 1px #FBFAF8;">
            @Html.DisplayFor(model => model.SalePrice)
        </dd>


        <dt>
            <u>
                Brewery:
            </u>
        </dt>

        <dd style="color:#0A122A; text-shadow: 1px 1px #FBFAF8;">
            @Html.DisplayFor(model => model.Brewery.Name)
        </dd>

    </dl>
</div>
<p>
    <button style="background-color:#0A122A;">
        @Html.ActionLink("Edit this Deal", "Edit", new { id = Model.SaleId }, new { style = "color: #698F3F" })</button>
    <button style="background-color:#0A122A;">
        
        @Html.ActionLink("Back to List", "Index", "", new { style = "color: #698F3F" })</button>
</p>
</body>