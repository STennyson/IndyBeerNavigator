@model IEnumerable<IndyBeerNavigator.Models.SaleModels.SaleListItem>

@{
    ViewBag.Title = "Index";
}
    <body style="        background-image: url(https://images.unsplash.com/photo-1504502350688-00f5d59bbdeb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=60);
        background-size: cover;
        background-repeat: no-repeat;
">
        <h2 style="        color: #698F3F;
        text-decoration: underline;
        text-shadow: 2px 2px #0A122A;
        text-align: center;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 4rem;">Special Deals</h2>


        @if (TempData.ContainsKey("SaveResult"))
        {
            <div class="alert alert-success fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
                @TempData["SaveResult"]
            </div>
        }

        <table class="table" style="border:3px double black; text-align:center;">
            <tr style="background-color: #0A122A; color: #698F3F; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size:2rem;">
                <th style="text-align:center;">
                   Day of the Week
                </th>
                <th style="text-align:center;">
                    Sale Price
                </th>
                <th style="text-align: center;">
                    @Html.DisplayNameFor(model => model.Brewery)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr style="background-color: #698F3F; color: #DAD2D8; border-bottom:2px double black; font-family:'Times New Roman', Times, serif; font-size: 2rem;">
                    <td style=" border: 1px dashed black;">
                        @Html.DisplayFor(modelItem => item.DayOfTheWeek)
                    </td>
                    <td style=" border: 1px dashed black;">
                        @Html.DisplayFor(modelItem => item.SalePrice)
                    </td>
                    <td style=" border: 1px dashed black;">
                        @Html.DisplayFor(modelItem => item.Brewery.Name)
                    </td>
                    <td style=" border: 1px dashed black;">
                        @Html.ActionLink("Edit", "Edit", new { id = item.SaleId }, new { style = "color:#0A122A" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.SaleId }, new { style = "color:#0A122A" }) |
                        @Html.ActionLink("Remove", "Delete", new { id = item.SaleId }, new { style = "color:#0A122A" })
                    </td>
                </tr>
            }

        </table>

        <button style="background-color:#0A122A; text-align:center;">
            @Html.ActionLink("Add a Special Deal", "Create", "", new { style = "color:#E7DECD" })
        </button>
</body>
