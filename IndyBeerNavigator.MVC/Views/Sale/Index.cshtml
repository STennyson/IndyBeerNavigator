@model IEnumerable<IndyBeerNavigator.Models.SaleModels.SaleListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Special Deals</h2>


@if (TempData.ContainsKey("SaveResult"))
{
<div class="alert alert-success fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
    @TempData["SaveResult"]
</div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DayOfTheWeek)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brewery)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfTheWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brewery.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SaleId }) |
                @Html.ActionLink("Details", "Details", new { id = item.SaleId }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.SaleId })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Add a Special Deal", "Create")
</p>
