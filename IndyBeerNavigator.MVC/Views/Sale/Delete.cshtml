@model IndyBeerNavigator.Models.SaleModels.SaleDetail

@{
    ViewBag.Title = "Delete";
}
<body style="        background-image: url(https://images.unsplash.com/photo-1504502350688-00f5d59bbdeb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=60);
        background-size: cover;
        background-repeat: no-repeat;
    ">
    <h2 style="        color: #698F3F;
        text-decoration: underline;
        text-shadow: 2px 2px #0A122A;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 4rem;">Are you sure you want to delete this deal?</h2>
<div style="        color: #698F3F;
        text-shadow: 1px 1px #FBFAF8;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 2rem;">
    <hr />
    <dl class="dl-horizontal">

        <dt>
            <u>
                Day of the Week:
            </u>
        </dt>

        <dd style="color:#FBFAF8; text-shadow:1px 1px #0A122A;">
            @Html.DisplayFor(model => model.DayOfTheWeek)
        </dd>

        <dt>
            <u>
                Sale Price:
            </u>
        </dt>

        <dd style="        color: #FBFAF8;
        text-shadow: 1px 1px #0A122A;">
            @Html.DisplayFor(model => model.SalePrice)
        </dd>

        <dt>
            <u>
                Brewery:
            </u>
        </dt>

        <dd style="color:#FBFAF8; text-shadow:1px 1px #0A122A;">
            @Html.DisplayFor(model => model.Brewery.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <hr />
            <button style="background-color:#0A122A;"> @Html.ActionLink("Back to List", "Index", "", new { style = "color:white;" })</button>
        </div>
    }
</div>
    </body>