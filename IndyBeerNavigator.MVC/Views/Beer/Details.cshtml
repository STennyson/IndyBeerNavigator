@model IndyBeerNavigator.Models.BeerModels.BeerDetail

@{
    ViewBag.Title = "Details";
}
    <body style="        background-image: url(https://images.unsplash.com/photo-1518176258769-f227c798150e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=60);
        background-size: cover;
        background-repeat: no-repeat;
    ">

        <h2 style="        color: #EC9A29;
        text-decoration: underline;
        text-shadow: 2px 2px #143642;
        text-align: center;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 4rem;"
            >Beer Details</h2>

        <div style="        text-align: center;
        color: #EC9A29;
        text-shadow: 2px 2px #143642;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 2rem;">
            <dl >

                <dt>
                <u>
                   Name:
                 </u>
                </dt>

                <dd style="color:#143642; text-shadow: 2px 2px #EC9A29;">
                    @Html.DisplayFor(model => model.Name)
                    
                </dd>

                <dt>
                    <u>
                    Style:
                    </u>
                </dt>

                <dd style=" color: #143642; text-shadow: 2px 2px #EC9A29;">
                    @Html.DisplayFor(model => model.Style)
                </dd>

                <dt>
                    <u>
                        ABV:
                    </u></dt>

                <dd style="color:#143642; text-shadow: 2px 2px #EC9A29;">
                    @Html.DisplayFor(model => model.ABV)
                </dd>

                <dt>
                    <u>
                    IBUs:
                    </u>
                </dt>

                <dd style="color:#143642; text-shadow: 2px 2px #EC9A29;">
                    @Html.DisplayFor(model => model.IBUs)
                </dd>

                <dt>
                    <u>
                    SRM:
                    </u>
                </dt>

                <dd style="color: #143642; text-shadow: 2px 2px #EC9A29;">
                    @Html.DisplayFor(model => model.SRM)
                </dd>

                <dt>
                    <u>
                    Canned or bottled:
                    </u>
                </dt>

                <dd style="color:#143642;text-shadow: 2px 2px #EC9A29;">
                    @Html.DisplayFor(model => model.CannedOrBottled)
                </dd>

                <dt>
                    <u>
                    @Html.DisplayNameFor(model => model.Brewery)
                    </u>
                </dt>

                <dd style="        color: #143642;
        text-shadow: 2px 2px #EC9A29;">
                    @Html.DisplayFor(model => model.Brewery.Name)
                </dd>

            </dl>
        </div>
        <p>
            <button style="background-color:#143642;">
                @Html.ActionLink("Edit this Beer", "Edit", new { id = Model.BeerId }, new { style = "color: #EC9A29" })</button>
                <button style="background-color:#143642">  @Html.ActionLink("Back to List", "Index", "", new { style = "color: #EC9A29" })</button>
</p>
        </body>
