@model IEnumerable<IndyBeerNavigator.Models.BeerModels.BeerListItem>


<body style="        background-image: url(https://images.unsplash.com/photo-1518176258769-f227c798150e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=60);
        background-size: cover;
        background-repeat: no-repeat;
    ">

@{
    ViewBag.Title = "Index";
}

    <h2 style="        color: #EC9A29;
        text-decoration: underline;
        text-shadow: 2px 2px #143642;
        text-align: center;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 4rem;">
        Beers of Indianapolis
    </h2>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table" style="border:3px double black; text-align:center;">
    
    <tr style="background-color: #143642; color: #EC9A29; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size:2rem;">
        <th style="text-align:center;">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="        text-align: center;">
            @Html.DisplayNameFor(model => model.Style)
        </th>
        <th style="text-align:center;">
            @Html.DisplayNameFor(model => model.ABV)
        </th>
        <th style="text-align:center;">
            @Html.DisplayNameFor(model => model.IBUs)
        </th>
        <th style="text-align:center;">
            @Html.DisplayNameFor(model => model.SRM)
        </th>
        <th style="text-align:center;">
            Canned or Bottled
        </th>
        <th style="text-align:center;">
            @Html.DisplayNameFor(model => model.Brewery)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color: #143642; color: #DAD2D8; border-bottom:2px double black; font-family:'Times New Roman', Times, serif; font-size: 2rem;">
            <td style=" border: 1px dashed black;">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style=" border: 1px dashed black;">
                @Html.DisplayFor(modelItem => item.Style)
            </td>
            <td style=" border: 1px dashed black;">
                @Html.DisplayFor(modelItem => item.ABV)
            </td>
            <td style=" border: 1px dashed black;">
                @Html.DisplayFor(modelItem => item.IBUs)
            </td>
            <td style=" border: 1px dashed black;">
                @Html.DisplayFor(modelItem => item.SRM)
            </td>
            <td style=" border: 1px dashed black;">
                @Html.DisplayFor(modelItem => item.CannedOrBottled)
            </td>
            <th style=" border: 1px dashed black;">
                @Html.DisplayFor(modelItem => item.Brewery.Name)
            </th>
            <td style=" border: 1px dashed black;">
               | @Html.ActionLink("Edit", "Edit", new { id = item.BeerId }, new{style = "color:#0F8B8D"}) 
               | @Html.ActionLink("Details", "Details", new { id = item.BeerId }, new { style = "color:#0F8B8D" }) 
               | @Html.ActionLink("Remove", "Delete", new { id = item.BeerId }, new { style = "color:#0F8B8D" }) |
            </td>
        </tr>
    }

</table>
    <button style="background-color:#143642; text-align:center;">

    @Html.ActionLink("Add a new Beer", "Create", "", new {style= "color:#EC9A29" })

    </button>
</body>