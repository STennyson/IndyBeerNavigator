@model IndyBeerNavigator.Models.BeerModels.BeerDetail

@{
    ViewBag.Title = "Delete";
}
    <body style="        background-image: url(https://images.unsplash.com/photo-1518176258769-f227c798150e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=60);
        background-size: cover;
        background-repeat: no-repeat;
    ">
        <h2 style="        color: #EC9A29;
        text-decoration: underline;
        text-shadow: 2px 2px #0F8B8D;
        text-align: center;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 4rem;">Are you sure you want to delete this beer?</h2>

        <div style=" border:3px double black; 
 text-align:center; 
 background-color: #143642; 
 color: #EC9A29; 
 font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; 
 font-size:2rem;">
            <h4>Like, really sure?</h4>
            <hr />
            <dl >
                
                <dt>
                    <u>
                    Name:
                    </u>
                </dt>

                <dd style="color:#0F8B8D">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt><u>
                    Brewery:
                    </u>
                </dt>

                <dd style="color:#0F8B8D">
                    @Html.DisplayFor(model => model.Brewery.Name)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <hr />
                   <button style="background-color:#0F8B8D"> @Html.ActionLink("Return to List", "Index", "", new { style = "color:white;" })</button>
                </div>
            }
        </div>
        </body>